<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ReactionSpeed.ReactionSpeedGame"
            fx:id="mainPane"
            prefHeight="400.0" prefWidth="600.0" >
    <Button fx:id="playGame" text="play" onAction="#playGame" alignment="CENTER" layoutX="300" layoutY="200"/>
    <Button fx:id="restartGame" text="Play Again" onAction="#restartGame" alignment="CENTER"
            layoutX="300" layoutY="200" visible="false"/>
</AnchorPane>
